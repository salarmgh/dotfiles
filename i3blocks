command=/usr/libexec/i3blocks/$BLOCK_NAME
separator_block_width=15
markup=none


[mediaplayer]
instance=cmus
interval=5
signal=10

[disk-io]
command=~/opt/i3blocks-contrib/disk-io/disk-io
markup=pango
interval=persist
label=IO
instance=/^nvme0n1/

[backlight]
command=~/opt/i3blocks-contrib/backlight/backlight
interval=30
label=L
instance=/^nvme0n1/

[essid]
command=~/opt/i3blocks-contrib/essid/essid
interval=60
#INTERFACE=wlp3s0

[key_layout]
command=~/opt/i3blocks-contrib/key_layout/key_layout
interval=30

[load_average]
command=~/opt/i3blocks-contrib/load_average/load_average
interval=10
label=load

[disk]
label=R
instance=/
interval=30

[disk]
label=H
instance=/home
interval=30

[bandwidth]
interval=5

[iface]
